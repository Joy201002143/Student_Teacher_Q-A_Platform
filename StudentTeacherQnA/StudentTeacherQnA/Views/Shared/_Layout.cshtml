<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Question" asp-action="Ask">Ask Question</a></li>

                @if (Context.Session.GetString("UserId") == null)
                {
                    <li><a asp-controller="Account" asp-action="Login">Login</a></li>
                    <li><a asp-controller="Account" asp-action="Register">Sign Up</a></li>
                }
                else
                {
                    <li><a asp-controller="Account" asp-action="Logout">Logout</a></li>
                    <li><a asp-controller="Question" asp-action="Dashboard">My Dashboard</a></li>
                }
            </ul>
        </nav>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <footer>
        <p>&copy; 2024 - StudentTeacherQnA</p>
    </footer>
</body>
</html>
